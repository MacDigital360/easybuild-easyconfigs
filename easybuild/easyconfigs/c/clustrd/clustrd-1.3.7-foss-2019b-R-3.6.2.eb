easyblock = 'Bundle'

name = 'clustrd'
version = '1.3.7'
versionsuffix = '-R-%(rver)s'

homepage = "https://cran.r-project.org/web/packages/clustrd/index.html"
description = """class of methods that combine dimension reduction and clustering of continuous,
 categorical or mixed-type data (Markos, Iodice D'Enza and van de Velden 2019;"""

