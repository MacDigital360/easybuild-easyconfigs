description = """GTEx & TOPMed data production and analysis pipelines."""

toolchain = {'name': 'foss', 'version': '2019b'}

source_urls = ['https://github.com/broadinstitute/gtex-pipeline/archive']
sources = ['%(version)s.tar.gz']
checksums = ['0c74068a67eccdb3955ffaf473bb2287efdd182a998503dd3482d3c9402e76f9']

dependencies = [
    ('Python', '3.7.4'),
    ('R', '3.6.2'),
