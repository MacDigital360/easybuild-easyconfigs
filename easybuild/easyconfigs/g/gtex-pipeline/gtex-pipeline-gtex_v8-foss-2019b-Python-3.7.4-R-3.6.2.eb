    ('picard', '2.21.1', '-Java-11', True),
    ('RNA-SeQC', '1.1.8', '-Java-11'),
    ('STAR', '2.7.2b'),
    ('RSEM', '1.3.2')
]

sanity_check_paths = {
    'files': [],
    'dirs': ['gene_model', 'genotype', 'phASER', 'qtl', 'rnaseq'],
}

modextrapaths = {
    'GENE_MODEL': 'gene_model',
    'GENOTYPE': 'genotype',
    'PHASER': 'phASER',
    'QTL': 'qtl',
    'RNASEQ': 'rnaseq',   
}

