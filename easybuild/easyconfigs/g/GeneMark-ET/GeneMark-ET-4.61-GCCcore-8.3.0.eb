easyblock = 'Tarball'

name = 'GeneMark-ET'
version = '4.61'

homepage = 'http://exon.gatech.edu/GeneMark'
description = "Eukaryotic gene prediction suite with automatic training"

toolchain = {'name': 'GCCcore', 'version': '8.3.0'}

# download via http://exon.gatech.edu/GeneMark/license_download.cgi
# rename gmes_linux_64.tar.gz to gmes_linux_64-4.61.tar.gz
sources = ['gmes_linux_64-4.61.tar.gz']
checksums = ['6d9a95884eebe932a15346d27bab738d75eba386b533dec5cdbefa64c5f13709']

dependencies = [('Perl', '5.30.0')]

fix_perl_shebang_for = ['*.pl']

sanity_check_paths = {
    'files': ['gmes.cfg', 'gmes_petap.pl'],
    'dirs': ['lib'],
}

modextrapaths = {'PATH': ''}

modextravars = {'GENEMARK_PATH': '%(installdir)s'}

moduleclass = 'bio'
