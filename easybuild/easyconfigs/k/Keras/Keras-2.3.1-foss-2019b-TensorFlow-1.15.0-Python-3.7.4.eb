easyblock = 'PythonPackage'

name = 'Keras'
version = '2.3.1'
_pyvsuffix = '-Python-%(pyver)s'
versionsuffix = '-TensorFlow-1.15.0%s' % _pyvsuffix

homepage = 'https://keras.io/'
description = """Keras is a minimalist, highly modular neural networks library, written in Python and
capable of running on top of either TensorFlow or Theano."""

toolchain = {'name': 'foss', 'version': '2019b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['321d43772006a25a1d58eea17401ef2a34d388b588c9f7646c34796151ebc8cc']

dependencies = [
    ('Python', '3.7.4'),
    ('TensorFlow', '1.15.0', _pyvsuffix),
    ('Theano', '1.0.4', _pyvsuffix),
    ('PyYAML', '5.1.2'),
    ('h5py', '2.10.0', _pyvsuffix),
]

use_pip = True
download_dep_fail = True

fix_python_shebang_for = ['bin/conv-template', 'bin/from-template']

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'math'
