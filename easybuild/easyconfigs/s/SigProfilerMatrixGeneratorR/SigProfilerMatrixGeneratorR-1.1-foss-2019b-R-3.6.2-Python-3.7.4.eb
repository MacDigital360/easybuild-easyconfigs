# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'Bundle'

name = 'SigProfilerMatrixGeneratorR'
version = '1.1'
versionsuffix = '-R-%(rver)s-Python-%(pyver)s'

homepage = "https://osf.io/s93d5/wiki/home/"
description = """R wrapper for utilizing the SigProfilerMatrixGenerator framework """

toolchain = {'name': 'foss', 'version': '2019b'}

dependencies = [
    ('R', '3.6.2'),
    ('Python', '3.7.4'),
    ('SigProfilerMatrixGenerator', '1.1.7', '-Python-%(pyver)s'),
]

exts_defaultclass = 'RPackage'
exts_filter = ("R -q --no-save", "library(%(ext_name)s)")
exts_default_options = {
    'source_urls': ['https://github.com/AlexandrovLab/SigProfilerMatrixGeneratorR/archive/'],
    'source_tmpl': 'v%(version)s.tar.gz',
}


# Order is important!
exts_list = [
    (name, version, {
        'checksums': ['231d9cd416787edebcd880075fbb981ead9e3be9ee70e0e7f74b61628a10c171'],
    }),
]

modextrapaths = {'R_LIBS': ''}

sanity_check_paths = {
    'files': ['SigProfilerMatrixGeneratorR/R/SigProfilerMatrixGeneratorR'],
    'dirs': [],
}

moduleclass = 'bio'
