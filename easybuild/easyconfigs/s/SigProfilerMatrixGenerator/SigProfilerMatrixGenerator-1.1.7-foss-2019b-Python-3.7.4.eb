# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'PythonBundle'

name = 'SigProfilerMatrixGenerator'
version = '1.1.7'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://osf.io/s93d5/wiki/home/"
description = """SigProfilerMatrixGenerator is a python framework that creates mutational matrices for somatic
 mutations. This tool works to identify and categorize the mutations based on possible single nucleotide variants
 (SNVs), double base substitutions (DBS), and insertions/deletions and provides further transcriptional strand
 bias categorization. It downsizes the generated mutations to parts of the genome like the exome or a custom BED
 file to help identify true mutational signatures within a genome. SigProfilerMatrixGenerator seamlessly
 integrates with other SigProfiler tools."""

toolchain = {'name': 'foss', 'version': '2019b'}

dependencies = [
    ('Python', '3.7.4'),
    ('SciPy-bundle', '2019.10', versionsuffix),
    ('matplotlib', '3.1.1', versionsuffix),
    ('statsmodels', '0.11.0', versionsuffix),
]

sanity_pip_check = True
use_pip = True

exts_default_options = {'source_urls': [PYPI_SOURCE]}

exts_list = [
    ('sigProfilerPlotting', '1.1.0', {
        'modulename': '%(name)s',
        'checksums': ['5a2c13f45d94485d2377d948b57c132d41d19a50f6cf8f7abce877b54e03e332'],
    }),
    (name, version, {
        'modulename': '%(name)s',
        'checksums': ['90ce76f1b986ec761e24ba47ec5e44fc2f2e0c7936a6df45967eebfeea944e3b'],
    }),
]

moduleclass = 'bio'
