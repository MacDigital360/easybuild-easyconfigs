# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'PythonBundle'

name = 'pytabix'
version = '0.1'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://pypi.org/project/pytabix/"
description = """This module allows fast random access to files compressed with bgzip and indexed by tabix. It
 includes a C extension with code from klib. The bgzip and tabix programs are available here."""

toolchain = {'name': 'foss', 'version': '2019b'}

dependencies = [
    ('Python', '2.7.16'),
]

#download_dep_fail = True
sanity_pip_check = True
use_pip = True

exts_default_options = {
    'source_urls': [PYPI_SOURCE],
}

exts_list = [
    (name, version, {
        'modulename': 'tabix',
        'checksums': ['0774f1687ebd41811fb07a0e50951b6be72d7cc7e22ed2b18972eaf7482eb7d1'],
    }),
]

moduleclass = 'bio'
