toolchain = {'name': 'foss', 'version': '2019b'}

source_urls = ['https://cpan.metacpan.org/authors/id/L/LD/LDS']
sources = ['Bio-BigFile-%(version)s.tar.gz']
patches = ['%(name)s-%(version)s.patch']
